@using MyHealthBlog.Domain
@model FoodObject


<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>FoodObject</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CaloriesPer100g" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CaloriesPer100g" class="form-control" />
                <span asp-validation-for="CaloriesPer100g" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Fat" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Fat" class="form-control" />
                <span asp-validation-for="Fat" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Carb" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Carb" class="form-control" />
                <span asp-validation-for="Carb" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Protein" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Protein" class="form-control" />
                <span asp-validation-for="Protein" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Links" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Links" class="form-control" />
                <span asp-validation-for="Links" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FoodCategoryId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="FoodCategoryId" class="form-control">
                    <option value="0">Berries</option>
                    <option value="1">Vegetables</option>
                    <option value="2">Fruits</option>
                    <option value="3">Grains</option>
                    <option value="4">Meats</option>
                    <option value="5">Fish</option>
                </select>
                <span asp-validation-for="FoodCategoryId" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Home" asp-action="Index">Homepage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}